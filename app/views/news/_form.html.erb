<%= form_with(model: news, local: true, html: { class: "form-horizontal form-bordered form-control-borderless" }) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :category_group_id, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.number_field :category_group_id, id: :news_category_group_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :title, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.text_field :title, id: :news_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :highlight, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.check_box :highlight, id: :news_highlight, class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-md-9 col-md-offset-3">
      <%= form.submit yield(:button_text), class: "btn btn-sm btn-primary"%>
      <%= link_to 'Back', news_index_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
