<%= form_with(model: news_site, local: true,  html: { class: "form-horizontal form-bordered form-control-borderless" }) do |form| %>
  <% if news_site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news_site.errors.count, "error") %> prohibited this news_site from being saved:</h2>

      <ul>
      <% news_site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.text_field :name, id: :news_site_name,  class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :url, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.text_field :url, id: :news_site_url,  class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :rating, class: "col-md-3 control-label" %>
    <div class="col-md-5">
      <%= form.number_field :rating, id: :news_site_rating,  class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-md-9 col-md-offset-3">
      <%= form.submit yield(:button_text), class: "btn btn-sm btn-primary"%>
    </div>
  </div>
<% end %>
