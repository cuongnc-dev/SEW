<p id="notice"><%= notice %></p>
<div class="content-header">
  <div class="header-section">
    <h1>
      <i class="fa fa-table"></i>News Site Management<br><small>News site information!</small>
    </h1>
  </div>
</div>
<ul class="breadcrumb breadcrumb-top">
  <li>News Site</li>
  <li><a href="">All news site</a></li>
</ul>
<div class="block full">
  <div class="table-responsive">
    <table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
      <thead>
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center">Name</th>
          <th class="text-center">Url</th>
          <th class="text-center">Rating</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <%@news_sites.each do |site|%>
        <tr>
          <td class="text-center"><%=site.id%></td>
          <td class="text-center"><%= link_to site.name, site.url %></td>
          <td class="text-center"><%= site.url %></td>
          <td class="text-center"><%= site.rating %></td>
          <td class="text-center">
            <div class="btn-group">
              <%= link_to edit_news_site_path(site.id), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><% end %>
              <%= link_to site, method: :delete, data: {confirm: "Bạn có chắc muốn xóa nó?"}, class: "btn btn-xs btn-danger" do %><i class="fa fa-times"></i> <% end %>
            </div>
          </td>
        </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
<%= link_to 'New News Site', new_news_site_path %>
